void ForceAddCond66(bool enable) {
    auto local = GetLocalPlayer();
    if (!local) return;
    
    uintptr_t shared = *(uintptr_t*)(local + 0xF8);  // m_Shared offset (sigscan)
    static auto AddCond = (void(__thiscall*)(uintptr_t, int))SigScan("server.dll", "55 8B EC 51 53 8B 5D 08");  // Real sig
    
    if (enable) {
        AddCond(shared, 66);  // Ghost mode ON
        // Optional: Hook State_Changed to force server replicate
    } else {
        AddCond(shared, 0);   // Clear all? Or specific removecond equiv
    }
}

