# Constants for Windows API
WH_KEYBOARD_LL = 13
WM_KEYDOWN = 0x0100
VK_INSERT = 0x2D

# Memory protection constants
PAGE_EXECUTE_READWRITE = 0x40
PAGE_READWRITE = 0x04





